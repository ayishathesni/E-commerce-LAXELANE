   <body>
<div class="container">
    <div class="login_wrap">
        <div class="padding_eight_all bg-white">
            <div class="heading_s1">
                <h3>Reset Your Password</h3>
            </div>
            <form id="resetPasswordForm" action="/reset-password" method="post" onsubmit="return validateResetPassword()">
                <div class="form-group">
                    <label for="newPassword">New Password:</label>
                    <input type="password" id="newPassword" name="newPass1" class="form-control" required />
                    <small class="text-muted">Password must be at least 8 characters long, include uppercase, lowercase, a number, and a special character.</small>
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Confirm Password:</label>
                    <input type="password" id="confirmPassword" name="newPass2" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary">Reset Password</button>
                <% if (locals.message && message.length > 0) { %>
                    <div class="alert alert-danger">
                        <%= message %>
                    </div>
                <% } %>
            </form>
            <div class="text-muted text-center pt-25">
                Don't have an account? <a href="/signup">Sign Up</a>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function validateResetPassword() {
        const newPassword = document.getElementById("newPassword").value;
        const confirmPassword = document.getElementById("confirmPassword").value;
        const passwordPattern = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;

        if (!passwordPattern.test(newPassword)) {
            Swal.fire({
                icon: 'error',
                title: 'Weak Password',
                text: 'Password must be at least 8 characters long and include uppercase, lowercase, a number, and a special character.'
            });
            return false;
        }

        if (newPassword !== confirmPassword) {
            Swal.fire({
                icon: 'error',
                title: 'Passwords Do Not Match',
                text: 'Please enter matching passwords.'
            });
            return false;
        }

        return true;
    }


  
    const urlParams = new URLSearchParams(window.location.search);
    const message = urlParams.get('message');
    if (message) {
        document.write(`<div class="alert alert-success">${message}</div>`);
    }


</script>

