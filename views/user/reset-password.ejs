     <style>
        .container {
            max-width: 1200px;
            margin: 30px auto;
            padding: 0 15px;
        }
    
        .login_wrap {
            max-width: 400px;
            margin: 0 auto;
            background: white;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
    
        .padding_eight_all {
            padding: 25px;
        }
    
        .heading_s1 {
            margin-bottom: 20px;
        }
    
        .heading_s1 h3 {
            font-size: 24px;
            color: #333;
            text-align: center;
            font-weight: 600;
            margin: 0;
        }
    
        .form-group {
            margin-bottom: 20px;
        }
    
        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            font-weight: 500;
        }
    
        .form-control {
            width: 100%;
